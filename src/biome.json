{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"useLiteralKeys": "warn"
			},
			"style": {
				"useTemplate": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"bracketSpacing": false,
			"trailingCommas": "all"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [".git", ".build/**/*", "node_modules/**/*"]
	}
}